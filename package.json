{
  "name": "planner-api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "start:prod": "NODE_ENV=production node dist/src/index.js",
    "test": "jest",
    "seed": "tsx scripts/seed.ts",
    "debug:mongo": "node -e \"console.log('MongoDB URI:', process.env.MONGO_URI)\"",
    "check:connection": "node -e \"const mongoose = require('mongoose'); mongoose.connect(process.env.MONGO_URI || 'mongodb://localhost:27017/planner').then(() => { console.log('Connection successful'); process.exit(0); }).catch(err => { console.error('Connection failed:', err.message); process.exit(1); });\"",
    "postbuild": "echo 'Build completed successfully'"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "razorpay": "^2.9.4",
    "socket.io": "^4.7.5",
    "winston": "^3.13.1",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
